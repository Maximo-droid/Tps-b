<!DOCTYPE html>
<html lang="en">
	<%- include('./partials/head', {
        title : "Administración"
    }) %>

<body>
    <div class="container"> <!-- Contenedor ppal -->

    <%- include('./partials/header') %>
        <div class="card mb-2">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h1>Back Office</h1>
                    <a class="btn btn-outline-dark" href="">Agregar producto</a>
                </div>
               
                 <hr>
            </div>
          
         
        </div>
        <div class="card">
            <div class="card-body">
             <table class="table">
                 <thead>
                   <tr>
                     <th scope="col">ID</th>
                     <th scope="col">Imagen</th>
                     <th scope="col">Producto</th>
                     <th scope="col">Descripción</th>
                     <th scope="col">Acciones</th>
                   </tr>
                 </thead>
                 <tbody>
                    <% products.forEach(({id, title,photo,description}) => { %>
                        <tr>
                            <th scope="row"><%= id %></th>
                            <td><img width="100" src="/img/<%= photo %>" alt=""> </td>
                            <td><%= title %></td>
                            <td><%= description %></td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-sm btn-success" href=""><i class="fa-solid fa-pencil"></i></a>
                                    <a class="btn btn-sm btn-danger" href=""><i class="fa-solid fa-trash-can"></i></a>
                                </div>
                            </td>
                          </tr>
                    <% }) %>
                   
                  
                 </tbody>
               </table>

     </div>
     </div>
    </div>
</body>
</html>